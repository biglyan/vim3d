# add light and put it on the path
add light
diffuse 0 1 0 1
translate 0 20 0
light point
light constant 1.0
light linear 0.00001
light quadratic 0.00001
name l0

path l0 path
ref l0 tx l0 diffr 10 0.00392156863 0
ref l0 ty l0 diffg 10 0.00392156863 0
ref l0 tz l0 diffb 10 0.00392156863 0



add sphere 1
name sun
scale 10.0 10.0 10.0

add sphere 1
name earth
scale 5.0 5.0 5.0
translate 0 0 25

add sphere 1
name moon
scale 0.25 0.25 0.25
translate 0 0 2

add sphere 1
name jupiter
scale 9.0 9.0 9.0
translate 0 0 50
obj group jupiter
name jupiterTrack

obj group sun
name solarSystem
obj child solarSystem earth
obj child solarSystem jupiterTrack
obj child earth moon

load channel Channels/zeroToOne.chan
name linear

register solarSystem ry linear 1 720 -360
register jupiterTrack ry linear 1 1440 -360
register earth ry linear 1 1080 540
register moon ry linear 5 360 0
reference l00 tx solarSystem tx
reference l00 ty solarSystem ty
reference l00 tz solarSystem tz


cam top
select solarSystem

s l00

display none
